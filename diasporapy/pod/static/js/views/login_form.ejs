<div class="panel panel-default">
    <div class="panel-heading"><h4 data-i18n="app.project"></h4></div>
    <div id="errorMessagePanel" class="alert alert-danger"></div>
    <div class="panel-body">
        <form class="form-login">
            <h2 class="form-login-heading" data-i18n="app.project"></h2>
            <div id="userNameFormGroup" class="form-group">
                <label for="username">User Name</label>
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                    <input type="text" name="username" id="username" class="form-control" data-i18n="[placeholder]common.username;" autofocus />
                </div>
            </div>
            <div id="passwordFormGroup" class="form-group">
                <label for="password">Password</label>
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                    <input type="password" name="password" id="password" class="form-control" data-i18n="[placeholder]common.password;" />
                </div>
            </div>
            <a href="javascript:;" class="btn btn-lg btn-primary btn-block authentication"><span class="glyphicon glyphicon-log-in"></span>  <span data-i18n="common.login"></span></a>
        </form>
    </div>
</div>